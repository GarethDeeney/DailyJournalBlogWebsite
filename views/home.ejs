<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <%- include('Partials/header'); -%>
  <meta charset="utf-8">
  <title>Home Page</title>
</head>

<body>
  <h1>Home</h1>
  <p><%=homeContent%></p>

  <%  posts.forEach(function(post){ %>
  <h1><%=post.title%></h1>
  <p><%=post.content.substring(0, 100) + "...";%></p>
  <a href="/post/<%=post._id%>">Read More</a>

  <%})%>

  <%- include('Partials/footer'); -%>
</body>

</html>
